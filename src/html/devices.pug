// Header
header#header.alt
    .logo
        a(href='index.pug')
            img(src='../../static/images/OpenRGB White.webp' height='75px')
    a(href='#menu') Menu
// Nav
nav#menu
    ul.links
        li
            a(href='https://gitlab.com/CalcProgrammer1/OpenRGB') GitLab
        li
            a(href='releases.pug') Releases
        li
            a(href='plugins.pug') Plugins
        li
            a(href='https://discord.gg/AQwjJPY') Discord
        li
            a(href='https://www.reddit.com/r/OpenRGB/') Reddit
        li
            a(href='devices.pug') Supported Devices
        li
            a(href='https://help.openrgb.org') Troubleshooting
        li
            a(href='resize.pug') Resizing Zones
        li
            a(href='https://www.patreon.com/CalcProgrammer1') Patreon
// Divider
section#divider.wrapper.style3
    .inner
// Downloads
section#downloads.wrapper.style2
    .inner
        header.align-center
            iframe(src="./devicesInner.html")
// Footer
footer#footer
    .container
        ul.icons
            li
                a.icon.fa-gitlab(href='https://gitlab.com/CalcProgrammer1/OpenRGB')
                    span.label GitLab
            li
                a.icon.fa-github(href='https://github.com/CalcProgrammer1/OpenRGB')
                    span.label GitHub
            li
                a.icon.fa-reddit(href='https://www.reddit.com/r/OpenRGB')
                    span.label Reddit
            li
                a.icon.fa-youtube(href='https://www.youtube.com/c/CalcProgrammer1')
                    span.label YouTube
            li
                a.icon.fa-twitter(href='https://twitter.com/CalcProgrammer1')
                    span.label Twitter
