- var section_title = 'Supported devices (0.9)'
include includes/devices_table.pug

script.
  jQuery(function () {
    var url = './data/supported_devices_0.9.csv'

    $.get(url).done(function (data) {
        var csv = d3.csvParseRows(data); //.replace(/\s*;\s*/g, ",")
        tabulate(csv);
    });

    $("#cmbCategory").on('change', function (e) {
        $("#datatable").DataTable().draw();
    });
  });

